    <style media="screen">
      *{
        margin: 0px;
        padding: 0px;
        box-sizing: border-box;
        font-family:  'Roboto', sans-serif;
        /* border:2px solid black; */
      }
      body{
        height: 160vh;background: linear-gradient(180deg, hsla(186, 33%, 94%, 1) 0%, hsla(216, 41%, 79%, 1) 100%);
        font-family:  'Roboto', sans-serif;

      }
      .ngoSlides{
        margin:1% 4%;
        padding: .4%;
